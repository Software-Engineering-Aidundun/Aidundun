/* pages/timeline/timeline.wxss */

.row {
    margin-top: 1px;
    background-color: #252A47;
    display: grid;
    grid-template-columns: 1fr 3fr 1fr 1fr 1fr 1fr;
    height: 30px;
    align-items: center;
    justify-items: center;
}

.medal {
    width: 25px;
    height: 25px;
}

.header-text1 {
    font-weight: bold;
}

.header-text2 {
    font-weight: bold;
    text-align: center;
}

.flag {
    width: 25px;
    height: 17px;
    vertical-align: text-bottom; /*图片和文字对齐关系*/
}

.bg-color1 {
    background-color: #FBFBF9;
}

.bg-color2 {
    background-color: #ECF8FD;
}

.left-alignment{
    justify-self: start;
    padding-left: 5px; /*微调*/
}

.flag-in-timeline {
    border-radius: 2px;
    width: 22px;
    height: 15px;
    vertical-align: text-bottom; /*图片和文字对齐关系*/
    margin-right: 3px;
}

.timeline-bg {
    background: linear-gradient(140deg,#5efce8,#736efe);
    color: var(--white);
}